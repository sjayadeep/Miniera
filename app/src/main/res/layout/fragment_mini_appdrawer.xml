<com.artincodes.miniera.utils.reveal.RevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/reveal_layout"
    tools:context=".MiniAppdrawerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_mini_appdrawer"
        >



        <com.artincodes.miniera.utils.DraggableGrid.DynamicGridView
            android:id="@+id/minidrawer_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="48dp"
            android:numColumns="5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:verticalSpacing="20dp"
            android:stretchMode="spacingWidthUniform"
            android:gravity="center"
            android:listSelector="@drawable/bg_mini_appdrawer"
            android:layoutAnimation="@anim/layout_fade"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteAppButton"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_delete"/>

</LinearLayout>


</com.artincodes.miniera.utils.reveal.RevealLayout>