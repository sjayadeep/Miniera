<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artincodes.miniera.fragments.ModesFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_marginBottom="@dimen/abc_action_bar_default_height_material"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/weather_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                />




            <FrameLayout
                android:id="@+id/music_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weather_container"
                />

            <FrameLayout
                android:id="@+id/todo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_container"
                />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
